{
  //===========================================================================
  // TORONTO MOBILITY ANALYTICS — VS Code Debug Configurations
  //===========================================================================
  // AUTHORITY: Debug configurations for Python ingestion scripts.
  // REFERENCE: DESIGN-DOC.md §7.3 Phase 1: Data Ingestion
  //
  // Run: F5 or Cmd+Shift+D → Select configuration → Start Debugging
  //===========================================================================
  "version": "0.2.0",
  "configurations": [
    //=========================================================================
    // Python: Ingestion script debugging
    //=========================================================================
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true
    },
    {
      "name": "Python: ingest.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/ingest.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true
    },
    {
      "name": "Python: ingest.py (verbose)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/ingest.py",
      "args": [
        "--verbose"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true
    },
    {
      "name": "Python: validate.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/validate.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true
    },
    {
      "name": "Python: load.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/load.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true
    },
    //=========================================================================
    // Python: Module debugging
    //=========================================================================
    {
      "name": "Python: Module (specify)",
      "type": "debugpy",
      "request": "launch",
      "module": "${input:moduleName}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true
    },
    //=========================================================================
    // Python: pytest debugging
    //=========================================================================
    {
      "name": "Python: pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false
    },
    {
      "name": "Python: pytest (current file)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false
    }
  ],
  //===========================================================================
  // INPUT: Dynamic input prompts
  //===========================================================================
  "inputs": [
    {
      "id": "moduleName",
      "type": "promptString",
      "description": "Python module to run (e.g., scripts.ingest)"
    }
  ]
}
